<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".Add_marks"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <Spinner
            android:id="@+id/spschedtype"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Spinner
                android:id="@+id/spbranch"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"/>

            <Spinner
                android:id="@+id/spsemester"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <EditText
            android:id="@+id/edt_schedule_note"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:ems="6"
            android:gravity="left"
            android:hint="Schedule Note"
            android:inputType="text"
            android:paddingTop="20dp"
            android:paddingBottom="30dp"
            android:imeOptions="actionSearch"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_select_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Select Document Image"
            android:textColor="@color/colorBrown"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ececec"
            android:padding="24dp"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/img_uplaod_assignment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/upload" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp">

                <TextView
                    android:id="@+id/txt_file_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="No File Selected."
                    android:textColor="@color/colorBrown"
                    android:textSize="16sp"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/txt_upload_file"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="Upload File"
                    android:layout_gravity="left"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:textStyle="bold"
                    android:background="@drawable/round_border_corner"/>

            </LinearLayout>



        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_border_corner"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:text="Submit"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>