<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".Upload_assignment"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/edt_sub_code"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="6"
                android:gravity="left"
                android:hint="Sub Code"
                android:inputType="number"
                android:paddingTop="20dp"
                android:paddingBottom="30dp"
                android:imeOptions="actionSearch"/>

            <TextView
                android:id="@+id/sub_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Subject Name"
                android:textSize="18sp"
                android:textColor="@color/colorBrown"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>


        <EditText
            android:id="@+id/edt_issue_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="Issue Date"
            android:inputType="date"
            android:paddingTop="20dp"
            android:paddingBottom="24dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="true"/>

        <EditText
            android:id="@+id/edt_last_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="left"
            android:hint="Last Date"
            android:inputType="date"
            android:paddingTop="20dp"
            android:paddingBottom="24dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="true"/>

        <TextView
            android:id="@+id/txt_select_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Select Document Image"
            android:textColor="@color/colorBrown"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ececec"
            android:padding="24dp"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/img_uplaod_assignment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/upload" />

            <TextView
                android:id="@+id/txt_upload_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Upload File"
                android:layout_gravity="center"
                android:textColor="@color/colorBrown"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <EditText
            android:id="@+id/edt_details_of_assignment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:gravity="left|center_vertical"
            android:hint="Details of assignment"
            android:inputType="textMultiLine"
            android:paddingTop="20dp"
            android:paddingBottom="24dp"/>

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_border_corner"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:text="Upload"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</ScrollView>