<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sub_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:textColor="@color/colorBrown"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Subject Name" />

            <TextView
                android:id="@+id/txt_issue_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:textColor="@color/colorBrown"
                android:textSize="15sp"
                tools:text="Issue Date" />

            <TextView
                android:id="@+id/txt_last_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:textColor="@color/colorBrown"
                android:textSize="15sp"
                tools:text="Last Date" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_assignment_file"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#efefef"
            android:src="@drawable/download" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_assignment_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:gravity="left"
        android:textColor="@color/colorBrown"
        android:textSize="15sp"
        tools:text="Note:-Assignment Details" />

</LinearLayout>